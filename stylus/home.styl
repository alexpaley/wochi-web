//Common ELements
footer
    position absolute
    bottom 20px
    right 0
    width 100%
    .header-text
        text-align center
.mobile
    display inline
    +below(480px)
        display none
.download-container-top
        position absolute
        top 630px
        width 100%
        height auto
        text-align center
        +below(1024px)
            top 475px
        +below(768px)
            top 370px
        +below(480px)
            top 260px
        +below(320px)
            top 190px
.download-container-bottom
        position absolute
        top 0
        width 100%
        height auto
        text-align center
        +below(1024px)
            top 100px
        +below(768px)
            top 55px
        +below(480px)
            top 40px
        +below(320px)
            top 20px
.download-button
    width 300px
    cursor pointer
    +below(1024px)
        width 250px
    +below(768px)
        width 200px
    +below(480px)
        width 140px
    +below(320px)
        width 100px

.costume-container
    position absolute
    top 50px
    width 100%
    height auto
    text-align center
    +below(768px)
        top 0
    .costume
        margin-right 20px
        width 200px
        +below(1024px)
            width 160px
        +below(768px)
            width 130px
        +below(480px)
            width 100px
        +below(320px)
            width 75px
        &:last-child
            margin-right 0

.food-container
    position absolute
    top 50px
    width 100%
    height auto
    text-align center
    +below(768px)
        top 10px
    .food
        margin-right 50px
        +below(1024px)
            width 100px
            margin-right 30px
        +below(768px)
            width 80px
        +below(480px)
            width 50px
        +below(320px)
            width 30px
        &:last-child
            margin-right 0

.last-mobile
    +below(480px)
        margin-right 0 !important

.app-container
    position absolute
    top 100px
    width 100%
    height auto
    text-align center
    +below(1024px)
        top 100px
    +below(768px)
        top 30px
    +below(480px)
        top 30px
    +below(320px)
        top 5px
    .phone
        margin-right 100px
        +below(480px)
            margin-right 50px
    .phone
        width 350px
        +below(1024px)
            width 250px
        +below(768px)
            width 200px
        +below(480px)
            width 150px
        +below(320px)
            width 100px
    .watch
        width 250px
        +below(1024px)
            width 200px
        +below(768px)
            width 175px
        +below(480px)
            width 100px
        +below(320px)
            width 80px

.header-text
    font-size 30px
    margin-bottom 50px
    color orange
    font-family 'futura', sans-serif
    text-align center
    +below(1024px)
        margin-bottom 20px
    +below(480px)
        font-size 20px
    +below(320px)
        margin-bottom 15px
    &.header-text-bottom
        font-size 24px
        +below(480px)
            font-size 16px
        +below(320px)
            font-size 14px

.slogan-container
    position absolute
    top 550px
    width 100%
    height auto
    text-align center
    .slogan
        color: #212121
        font-family 'futura', sans-serif
        text-align center
        font-size 24px
        text-transform uppercase
    +below(1024px)
        top 400px
    +below(768px)
        top 305px

h1
    font-size 40px
    +below(768px)
        font-size 30px
    +below(480px)
        font-size 25px
    +below(320px)
        font-size 20px

a
    text-decoration none
    color orange


