        height 120px

//Common ELements
footer
    position absolute
    bottom 0
    right 0
    width 100%
    .header-text
        text-align center
.mobile
    display inline
    +below(480px)
        display none
.download-container-top
        position absolute
        top 1000px
        width 100%
        height auto
        text-align center
        +below(1024px)
            top 630px
        +below(750px)
            top 455px
        +below(480px)
            top 290px
        +below(320px)
            top 190px
.download-container-bottom
        position absolute
        top 0
        width 100%
        height auto
        text-align center
        +below(1024px)
            top 100px
        +below(750px)
            top 100px
        +below(480px)
            top 80px
        +below(320px)
            top 40px
.download-button
    width 300px
    cursor pointer
    +below(1024px)
        width 250px
    +below(750px)
        width 200px
    +below(480px)
        width 140px
    +below(320px)
        width 100px

.costume-container
    position absolute
    top 50px
    width 100%
    heigh auto
    text-align center
    +below(750px)
        top 0
    .costume
        margin-right 20px
        +below(1024px)
            width 160px
        +below(750px)
            width 130px
        +below(480px)
            width 100px
        +below(320px)
            width 80px

.food-container
    position absolute
    top 50px
    width 100%
    height auto
    text-align center
    +below(750px)
        top 0
    .food
        margin-right 50px
        +below(1024px)
            width 100px
            margin-right 30px
        +below(750px)
            width 80px
        +below(480px)
            width 50px
        +below(320px)
            width 30px

.app-container
    position absolute
    top 100px
    width 100%
    height auto
    text-align center
    +below(1024px)
        top 100px
    +below(750px)
        top 30px
    +below(480px)
        top 30px
    +below(320px)
        top 5px
    .phone
        margin-right 100px
        +below(480px)
            margin-right 50px
    .phone
        +below(1024px)
            width 250px
        +below(750px)
            width 200px
        +below(480px)
            width 150px
        +below(320px)
            width 100px
    .watch
        +below(1024px)
            width 250px
        +below(750px)
            width 175px
        +below(480px)
            width 100px
        +below(320px)
            width 80px

.header-text
    margin-bottom 50px
    color orange
    font-family 'futura', sans-serif
    text-align center
    +below(1024px)
        margin-bottom 20px
    +below(320px)
        margin-bottom 5px
    &.header-text-bottom
        font-size 14px

h1
    font-size 40px
    +below(750px)
        font-size 30px
    +below(480px)
        font-size 25px
    +below(320px)
        font-size 20px



