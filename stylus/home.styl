#home
    position relative
    width auto
    height 100%
    max-width 100%
    background url('../img/background/landing2560px-optimized.jpg') no-repeat center center
    overflow hidden
    +below(1024px)
        background url('../img/background/landing1024px-optimized.jpg') no-repeat center center
        height 2265px
    +below(768px)
        background url('../img/background/landing768px-optimized.jpg') no-repeat center center
        height 1699px
    +below(480px)
        background url('../img/background/landing480px-optimized.jpg') no-repeat center center
        height 1360px
    +below(320px)
        background url('../img/background/landing320px-optimized.jpg') no-repeat center center
        height 897px

