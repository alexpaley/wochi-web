#home
    position relative
    width auto
    height 100%
    max-width 100%
    background url('../img/background/landing2560px3.jpg') no-repeat center center
    overflow hidden
    +below(1024px)
        background url('../img/background/landing1024px.jpg') no-repeat center center
        height 2560px
    +below(750px)
        background url('../img/background/landing750px.jpg') no-repeat center center
        height 1875px
    +below(480px)
        background url('../img/background/landing480px.jpg') no-repeat center center
        height 1200px
    +below(320px)
        background url('../img/background/landing320px.jpg') no-repeat center center
        height 800px

.section-top, .section-dress, .section-feed,
.section-app, .section-download
    position relative
    display block
    width 100%
    //border 1px solid red

.section-top
    height 1400px
    +below(1024px)
        height 800px
