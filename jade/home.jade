extends ./layout.jade

block content
    #home
        section.section-top
            .download-container-top
                a(href="#", target="_blank")
                    img.download-button(src='../img/common/download_button.png')
        section.section-dress
            .costume-container
                h1.header-text Dress me <3
                img.costume(src="../img/costumes/rambo.png")
                img.costume(src="../img/costumes/breakingbad.png")
                img.costume.mobile(src="../img/costumes/tony.png")
                img.costume.mobile(src="../img/costumes/cat.png")
        section.section-feed
            .food-container
                h1.header-text >_< Feed me
                img.food(src="../img/food/ramen.png")
                img.food(src="../img/food/lollipop.png")
                img.food(src="../img/food/mochi.png")
                img.food.mobile(src="../img/food/banana.png")
                img.food.mobile(src="../img/food/pizza.png")
        section.section-app
            .app-container
                img.phone(src="../img/common/iphone.png")
                img.watch(src="../img/common/watch.png")
        section.section-download
            .download-container-bottom
                a(href="#", target="_blank")
                    img.download-button(src='../img/common/download_button.png')
        footer
            h4.header-text.header-text-bottom Made with <3 by Diwei and Dairy Free Games